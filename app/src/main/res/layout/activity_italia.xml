<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".italia.ItaliaActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="477dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/bandeiraitalia"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:contentDescription="@string/bandeira_japao"
            app:srcCompat="@drawable/_55px_flag_of_italy_svg" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btn_sobre"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:backgroundTint="#009344"
                android:onClick="btnAbrirSobrePais"
                android:text="@string/sobre_o_pa_s"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_lugares"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:backgroundTint="#ffffff"
                android:onClick="btnAbrirLugares"
                android:text="@string/lugares_para_conhecer"
                android:textColor="#333" />

            <Button
                android:id="@+id/btn_artistas"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginLeft="6dp"
                android:backgroundTint="#cf2734"
                android:onClick="btnAbrirArtistas"
                android:text="@string/artistas" />

        </TableRow>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
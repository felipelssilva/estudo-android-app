<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".india.artistas.YayoiActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Yayoi Kusama"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Tipo do artista: artista plática" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Nascimento: 22 de março de 1929 (92 anos)" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Yayoi Kusama (草間 彌生 ou 弥生 Kusama Yayoi?, Matsumoto, 20 de março de 1929) é uma artista plástica e escritora japonesa, considerada uma das mais originais e importantes artistas pláticas do seu país. Seu trabalho é uma mistura de diversas artes, como colagens, pinturas, esculturas, arte performática e instalações ambientais, onde é visível uma característica que se tornou a marca da artista: a obsessão por pontos e bolas." />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>